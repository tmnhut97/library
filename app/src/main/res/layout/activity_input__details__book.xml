<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activityInputDetailBook"
    tools:context=".Input_Details_BookActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/TextViewInputDetailBookBookName"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="30dp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:maxLines="1"
                android:hint="Tên sách"
                android:padding="10dp"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Số lượng"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"/>

            <EditText
                android:id="@+id/EditTextDetailBookQuantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/boder_background"
                android:gravity="left"
                android:inputType="number"
                android:maxLines="1"
                android:hint="Nhập số lượng"
                android:padding="10dp"
                android:textColor="#101111"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/EditTextDetailBookQuantity_er"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Thể loại"
                android:textStyle="bold"
                android:labelFor="@+id/TextViewDetailBookCategory"
                android:layout_marginBottom="5dp"/>

            <Spinner
                android:id="@+id/TextViewDetailBookCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:textSize="20sp"
                android:tooltipText="Chọn thể loại" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="NXB"
                android:textStyle="bold"
                android:labelFor="@+id/EditTextDetailBookNXB"
                android:layout_marginBottom="5dp"/>
            <EditText
                android:id="@+id/EditTextDetailBookNXB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/boder_background"
                android:maxLines="1"
                android:gravity="left"
                android:hint="Nhà xuất bản"
                android:padding="10dp"
                android:textColor="#101111"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/EditTextDetailBookNXB_er"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#e41a1a"
                android:textSize="15sp" />


            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10">

                <TextView
                    android:layout_weight="6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="Năm xuất bản"
                    android:textStyle="bold"
                    android:layout_marginBottom="5dp"/>
                <ImageView
                    android:layout_margin="5dp"
                    android:layout_weight="4"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_reply"
                    android:id="@+id/ImageViewResetDetailBookPublishingYear"/>
            </LinearLayout>

            <TextView
                android:id="@+id/EditTextDetailBookPublishingYear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/boder_background"
                android:gravity="left"
                android:hint="Năm xuất bản"
                android:inputType="date"
                android:maxLines="1"
                android:padding="10dp"
                android:textColor="#101111"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/EditTextDetailBookPublishingYear_er"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#e41a1a"
                android:textSize="15sp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Ngôn ngữ"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"/>
            <EditText
                android:id="@+id/EditTextDetailBookLanguage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/boder_background"
                android:gravity="left"
                android:hint="Ngôn ngữ"
                android:maxLines="1"
                android:padding="10dp"
                android:textColor="#101111"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/EditTextDetailBookLanguage_er"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#e41a1a"
                android:textSize="15sp" />

        </LinearLayout>
    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabSaveDetailBook"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="#3862b1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.942"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_check_black_24dp"
        tools:ignore="VectorDrawableCompat" />
</android.support.constraint.ConstraintLayout>