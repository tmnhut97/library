<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/boder_background"
    android:layout_marginBottom="2dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp">

    <RelativeLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ItemFragmentImageBook"
            android:layout_width="60dp"
            android:layout_height="55dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/noavatarbook"
            android:layout_marginEnd="20dp" />

        <TextView
            android:id="@+id/ItemFragmentBookBookName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/ItemFragmentImageBook"
            android:maxLines="1"
            android:text="Tên sách"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ItemFragmentBookAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ItemFragmentBookBookName"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/ItemFragmentImageBook"
            android:text="Tác giả" />

        <TextView
            android:id="@+id/textViewItemFragmentBookId"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />

    </RelativeLayout>
</android.support.v7.widget.CardView>