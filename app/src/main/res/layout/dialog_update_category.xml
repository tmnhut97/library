<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="15dp"
    android:background="#edd3d3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_marginBottom="30dp"
        android:layout_height="60dp"
        android:padding="10dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#ff00"
        android:hint="Sửa tên danh mục"/>

    <TextView
        android:id="@+id/TextViewDialogUpdateCategoryNameOld"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="left"
        android:hint="Tên danh mục cũ"
        android:padding="10dp"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/TextViewDialogUpdateCategoryNameNew"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="left"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:background="#fff"
        android:hint="Đổi thành"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#e41a1a"
        android:textSize="15sp"
        android:id="@+id/TextViewUpdateCategory_er"/>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10">
        <Button
            android:layout_weight="6"
            android:text="Thay đổi"
            android:layout_margin="5dp"
            android:background="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/buttonSubmitDialogUpdateCategory"/>
        <Button
            android:layout_margin="5dp"
            android:layout_weight="4"
            android:text="Hủy"
            android:background="#aba0a0"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/buttonCannelDialogUpdateCategory"/>
    </LinearLayout>
</LinearLayout>