    <Button
        android:id="@+id/buttonSelectAvatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_camera"
        app:layout_constraintBottom_toBottomOf="@+id/CircleImageViewCreateAvatarUser"
        app:layout_constraintEnd_toEndOf="@+id/CircleImageViewCreateAvatarUser" />

    <Button
        android:id="@+id/buttonSubmitCreateBook"
        android:layout_width="178dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="#3313ea"
        android:text="Tạo mới"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerCreateUserLevel" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewCreateUserUserName"
        app:layout_constraintStart_toStartOf="@+id/textViewCreateUserUserName"
        app:layout_constraintTop_toTopOf="@+id/textViewCreateUserUserName"
        app:srcCompat="@drawable/ic_account"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewCreateUserEmail"
        app:layout_constraintStart_toStartOf="@+id/textViewCreateUserEmail"
        app:layout_constraintTop_toTopOf="@+id/textViewCreateUserEmail"
        app:srcCompat="@drawable/ic_email"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewCreateUserPassWord"
        app:layout_constraintStart_toStartOf="@+id/textViewCreateUserPassWord"
        app:layout_constraintTop_toTopOf="@+id/textViewCreateUserPassWord"
        app:srcCompat="@drawable/ic_pass"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewCreateUserPassWord_re"
        app:layout_constraintStart_toStartOf="@+id/textViewCreateUserPassWord_re"
        app:layout_constraintTop_toTopOf="@+id/textViewCreateUserPassWord_re"
        app:srcCompat="@drawable/ic_pass"
        tools:ignore="VectorDrawableCompat" />
    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/spinnerCreateUserLevel"
        app:layout_constraintStart_toStartOf="@+id/spinnerCreateUserLevel"
        app:layout_constraintTop_toTopOf="@+id/spinnerCreateUserLevel"
        app:srcCompat="@drawable/ic_perm"
        tools:ignore="VectorDrawableCompat" />

